generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id         String   @id @db.Uuid
  username   String?
  full_name  String?
  avatar_url String?
  email      String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("profiles")
  @@index([email], map: "profiles_email_idx")
}
